@model FurnitureStore.ViewModel.OrderIndexViewModel

@{
	ViewData["Title"] = "Orders";
}

<div class="container d-flex align-center mb-3 justify-content-between">
	<div class="d-flex flex-wrap">
		<h1>All orders</h1>
		<a class="d-flex btn btn-warning ms-4 align-items-center" asp-conroller="Orders" asp-action="Create">Add order</a>
	</div>
	<div class="d-flex flex-wrap">
		<form class="d-flex ms-4 w-auto" method="post" asp-controller="Orders" asp-action="Index">
			<p class="d-flex align-items-center m-0 mb-0">Date from</p>
			<input type="date" class="form-control w-auto ms-4" asp-for="DateFrom">
			<p class="d-flex align-items-center m-0 mb-0 ms-4">Date to</p>
			<input type="date" class="form-control w-auto ms-4" asp-for="DateTo">
			<input type="submit" class="d-flex btn btn-warning ms-4 align-items-center" value="Select"/>
		</form>
	</div>
</div>

<div class="border border-secondary rounded">
	<table class="table align-middle">
    	<thead>
    	<tr>
    		<th scope="col">#</th>
    		<th scope="col">Date</th>
    		<th scope="col">Customer</th>
    		<th scope="col">Worker</th>
    		<th scope="col"></th>
    	</tr>
    	</thead>
	    <tbody class="app-tbody">
	    @foreach (var item in Model.Orders)
	    {
		    <tr>
			    <td>Order #@item.Id</td>
			    <td>@item.Date.ToString("MM/dd/yyyy")</td>
			    <td>@item.Customer.Surname @item.Customer.Name</td>
			    <td>@item.Worker.Surname</td>
			    <td class="d-flex flex-wrap justify-content-end">
				    <a asp-action="Edit" asp-route-id="@item.Id" class="d-flex bg-primary rounded me-2">
					    <span class="d-flex p-2">
						    <svg viewBox="0 0 24 24" width="16" height="16" className="inline-block">
							    <path fill="white" d="M16.84,2.73C16.45,2.73 16.07,2.88 15.77,3.17L13.65,5.29L18.95,10.6L21.07,8.5C21.67,7.89 21.67,6.94 21.07,6.36L17.9,3.17C17.6,2.88 17.22,2.73 16.84,2.73M12.94,6L4.84,14.11L7.4,14.39L7.58,16.68L9.86,16.85L10.15,19.41L18.25,11.3M4.25,15.04L2.5,21.73L9.2,19.94L8.96,17.78L6.65,17.61L6.47,15.29"/>
						    </svg>
					    </span>
				    </a>
				    <a asp-action="Details" asp-route-id="@item.Id" class="d-flex bg-secondary rounded me-2">
					    <span class="d-flex p-2">
						    <svg viewBox="0 0 24 24" width="16" height="16" className="inline-block">
							    <path fill="white" d="M3,14L3.5,14.07L8.07,9.5C7.89,8.85 8.06,8.11 8.59,7.59C9.37,6.8 10.63,6.8 11.41,7.59C11.94,8.11 12.11,8.85 11.93,9.5L14.5,12.07L15,12C15.18,12 15.35,12 15.5,12.07L19.07,8.5C19,8.35 19,8.18 19,8A2,2 0 0,1 21,6A2,2 0 0,1 23,8A2,2 0 0,1 21,10C20.82,10 20.65,10 20.5,9.93L16.93,13.5C17,13.65 17,13.82 17,14A2,2 0 0,1 15,16A2,2 0 0,1 13,14L13.07,13.5L10.5,10.93C10.18,11 9.82,11 9.5,10.93L4.93,15.5L5,16A2,2 0 0,1 3,18A2,2 0 0,1 1,16A2,2 0 0,1 3,14Z"/>
						    </svg>
					    </span>
				    </a>
				    <a asp-action="Delete" asp-route-id="@item.Id" class="d-flex bg-danger rounded me-2">
					    <span class="d-flex p-2">
						    <svg viewBox="0 0 24 24" width="16" height="16" className="inline-block">
							    <path fill="white" d="M9,3V4H4V6H5V19A2,2 0 0,0 7,21H17A2,2 0 0,0 19,19V6H20V4H15V3H9M9,8H11V17H9V8M13,8H15V17H13V8Z"/>
						    </svg>
					    </span>
				    </a>
			    </td>
		    </tr>
	    }
	    </tbody>
    </table>
</div>
