<div class="d-flex flex-wrap align-items-center justify-content-center text-center row" style="height: 800px">
	<div class="form-signin col-5 m-auto">
		<form asp-controller="Account" asp-action="Login" method="post" enctype="multipart/form-data">
			<img class="mb-4" src="~/img/assets/logo.png" alt="" width="150" height="150">
			<h1 class="h3 mb-3 fw-normal">Please sign in</h1>

			<div class="form-floating">
				<input asp-for="Username" type="text" class="form-control" id="floatingInput" placeholder="Username">
				<label asp-for="Username" for="floatingInput">Username</label>
			</div>
			<div class="form-floating">
				<input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
				<label asp-for="Password" for="floatingPassword">Password</label>
			</div>

			<div class="mb-3">
				<label>
					<input hidden asp-for="ReturnUrl"/>
					<div asp-validation-summary="All" class="text-danger"></div>
				</label>
			</div>
			<button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
		</form>
	</div>
</div>
